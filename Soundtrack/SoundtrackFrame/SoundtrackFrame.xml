<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="SoundtrackFrame.lua"/>
    <Include file="GeneralTemplates.xml"/>
    <Include file="EventsTab.xml"/>
    <Include file="OptionsTab.lua"/>
    <Include file="OptionsTab.xml"/>
    <Include file="ProfilesTab.lua" />
    <Include file="ProfilesTab.xml"/>
    <Include file="AboutTab.xml"/>

    <!-- ALL TEXTURES -->
    <Texture name="Soundtrack_PlayingIconTexture" file="Interface\Addons\Soundtrack\Images\PlayingIcon"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>
    <Texture name="Soundtrack_PreviousTexture" file="Interface\AddOns\Soundtrack\Images\Previous"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>
    <Texture name="Soundtrack_PreviousDisabledTexture" file="Interface\AddOns\Soundtrack\Images\PreviousDisabled"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>
    <Texture name="Soundtrack_PlayTexture" file="Interface\AddOns\Soundtrack\Images\Play"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>
    <Texture name="Soundtrack_PauseTexture" file="Interface\AddOns\Soundtrack\Images\Pause"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>
    <Texture name="Soundtrack_NextTexture" file="Interface\AddOns\Soundtrack\Images\Next"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>
    <Texture name="Soundtrack_NextDisabledTexture" file="Interface\AddOns\Soundtrack\Images\NextDisabled"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>
    <Texture name="Soundtrack_StopTexture" file="Interface\AddOns\Soundtrack\Images\Stop"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>
    <Texture name="Soundtrack_InfoTexture" file="Interface\AddOns\Soundtrack\Images\Info"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>
    <Texture name="Soundtrack_ReportTexture" file="Interface\AddOns\Soundtrack\Images\Report"
             inherits="Soundtrack_TextureTemplate" virtual="true"/>

    <!--Main frame-->
    <Frame name="SoundtrackFrame" toplevel="true" parent="UIParent" movable="true" enableMouse="true" hidden="true">
        <Size>
            <AbsDimension x="870" y="525"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT">
                <Offset>
                    <AbsDimension x="0" y="-104"/>
                </Offset>
            </Anchor>
        </Anchors>

        <HitRectInsets>
            <AbsInset left="0" right="30" top="0" bottom="45"/>
        </HitRectInsets>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitleText" inherits="GameFontNormal" text="Soundtrack"> <!--SOUNDTRACK_TITLE-->
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="-18"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="SoundtrackFrame_CloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-5" y="-5"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnEnter>Soundtrack.ShowTip(self, SOUNDTRACK_CLOSE, SOUNDTRACK_CLOSE_TIP)</OnEnter>
                    <OnLeave>Soundtrack.HideTip()</OnLeave>
                </Scripts>
            </Button>

            <!-- Tabs -->
            <Button name="SoundtrackFrameTab1" inherits="SoundtrackFrameTabTemplate" id="1" text="Battle">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="15" y="8"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="SoundtrackFrameTab2" inherits="SoundtrackFrameTabTemplate" id="2" text="Bosses">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="SoundtrackFrameTab1" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="SoundtrackFrameTab3" inherits="SoundtrackFrameTabTemplate" id="3" text="Zones">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="SoundtrackFrameTab2" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="SoundtrackFrameTab4" inherits="SoundtrackFrameTabTemplate" id="4" text="Dances">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="SoundtrackFrameTab3" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="SoundtrackFrameTab5" inherits="SoundtrackFrameTabTemplate" id="5" text="Misc">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="SoundtrackFrameTab4" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="SoundtrackFrameTab6" inherits="SoundtrackFrameTabTemplate" id="6" text="Custom">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="SoundtrackFrameTab5" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="SoundtrackFrameTab7" inherits="SoundtrackFrameTabTemplate" id="7" text="Playlists">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="SoundtrackFrameTab6" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="SoundtrackFrameTab8" inherits="SoundtrackFrameTabTemplate" id="8" text="Options">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="SoundtrackFrameTab7" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="SoundtrackFrameTab9" inherits="SoundtrackFrameTabTemplate" id="9" text="Profiles">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="SoundtrackFrameTab8" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="SoundtrackFrameTab10" inherits="SoundtrackFrameTabTemplate" id="10" text="About">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="SoundtrackFrameTab9" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>

            <StatusBar name="SoundtrackFrame_StatusBarEvent" inherits="SoundtrackFrame_StatusBarTemplate" minValue="0"
                       maxValue="8" defaultValue="1" id="1">
                <Anchors>
                    <Anchor point="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="13" y="10"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </StatusBar>
            <StatusBar name="SoundtrackFrame_StatusBarTrack" inherits="SoundtrackFrame_StatusBarTemplate" minValue="0"
                       maxValue="244" defaultValue="23" id="2">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="SoundtrackFrame_StatusBarEvent" relativePoint="RIGHT">
                        <Offset>
                            <AbsDimension x="5" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </StatusBar>

            <Button name="SoundtrackFrame_PreviousButton" inherits="Soundtrack_PreviousButton">
                <Size>
                    <AbsDimension x="16" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="SoundtrackFrame_StatusBarTrack">
                        <Offset>
                            <AbsDimension x="10" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>Soundtrack.Events.PlaybackPrevious()</OnClick>
                    <OnEnter>Soundtrack.ShowTip(self, SOUNDTRACK_PREVIOUS, SOUNDTRACK_PREVIOUS_TIP)</OnEnter>
                    <OnLeave>Soundtrack.HideTip()</OnLeave>
                </Scripts>
            </Button>
            <Button name="SoundtrackFrame_PlayButton" inherits="Soundtrack_PlayButton">
                <Size>
                    <AbsDimension x="16" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="SoundtrackFrame_PreviousButton"/>
                </Anchors>
                <Scripts>
                    <OnLoad>SoundtrackFrame_RefreshPlaybackControls()</OnLoad>
                    <OnClick>Soundtrack.Events.PlaybackPlayStop()</OnClick>
                    <OnEnter>Soundtrack.ShowTip(self, SOUNDTRACK_PLAY, SOUNDTRACK_PLAY_TIP)</OnEnter>
                    <OnLeave>Soundtrack.HideTip()</OnLeave>
                </Scripts>
            </Button>
            <Button name="SoundtrackFrame_StopButton" inherits="Soundtrack_StopButton">
                <Size>
                    <AbsDimension x="16" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="SoundtrackFrame_PlayButton"/>
                </Anchors>
                <Scripts>
                    <OnLoad>SoundtrackFrame_RefreshPlaybackControls()</OnLoad>
                    <OnClick>Soundtrack.Events.PlaybackPlayStop()</OnClick>
                    <OnEnter>Soundtrack.ShowTip(self, SOUNDTRACK_PAUSE, SOUNDTRACK_PAUSE_TIP)</OnEnter>
                    <OnLeave>Soundtrack.HideTip()</OnLeave>
                </Scripts>
            </Button>
            <Button name="SoundtrackFrame_NextButton" inherits="Soundtrack_NextButton">
                <Size>
                    <AbsDimension x="16" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="SoundtrackFrame_PlayButton"/>
                </Anchors>
                <Scripts>
                    <OnClick>Soundtrack.Events.PlaybackNext()</OnClick>
                    <OnEnter>Soundtrack.ShowTip(self, SOUNDTRACK_NEXT, SOUNDTRACK_NEXT_TIP)</OnEnter>
                    <OnLeave>Soundtrack.HideTip()</OnLeave>
                </Scripts>
            </Button>
            <Button name="SoundtrackFrame_TrueStopButton" inherits="Soundtrack_TrueStopButton">
                <Size>
                    <AbsDimension x="16" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="SoundtrackFrame_NextButton"/>
                </Anchors>
                <Scripts>
                    <OnClick>Soundtrack.Events.PlaybackTrueStop()</OnClick>
                    <OnEnter>Soundtrack.ShowTip(self, SOUNDTRACK_STOP, SOUNDTRACK_STOP_TIP);</OnEnter>
                    <OnLeave>Soundtrack.HideTip()</OnLeave>
                </Scripts>
            </Button>

            <!-- EVENTS TAB -->
            <Frame name="SoundtrackFrameEventFrame" inherits="SoundtrackFrameEventFrameTemplate"/>

            <!-- OPTIONS TAB -->
            <Frame name="SoundtrackFrameOptionsTab" inherits="SoundtrackFrameOptionsTabTemplate"/>

            <!-- PROFILES TAB -->
            <Frame name="SoundtrackFrameProfilesFrame" inherits="SoundtrackFrameProfilesFrameTemplate"/>

            <!-- ABOUT TAB -->
            <Frame name="SoundtrackFrameAboutFrame" inherits="SoundtrackFrameAboutFrameTemplate"/>
        </Frames>
        <Scripts>
            <OnLoad>
                Mixin(self, BackdropTemplateMixin or {});
                self:SetBackdrop({
                bgFile = "Interface\\DialogFrame\\UI-DialogBox-Background",
                edgeFile = "Interface\\DialogFrame\\UI-DialogBox-Gold-Border",
                tile = true,
                tileEdge = true,
                tileSize = 32,
                edgeSize = 32,
                insets = { left = 11, right = 12, top = 12, bottom = 11 },
                });

                self:SetBackdropColor(.1,.1,.1,.9)
                self:RegisterForDrag("LeftButton")
                SoundtrackFrame_OnLoad(self)
            </OnLoad>

            <OnDragStart>self:StartMoving();</OnDragStart>
            <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
            <OnShow>SoundtrackFrame_OnShow()</OnShow>
            <OnHide>SoundtrackFrame_OnHide()</OnHide>
            <OnEvent>SoundtrackFrame_OnEvent(self, event, ...)</OnEvent>
            <OnMouseWheel>return</OnMouseWheel>
        </Scripts>
    </Frame>
</Ui>
